<resources>

    <!-- Base application theme. -->
    <style name="TNAppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.Main" parent="TNAppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="BottomBarItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>c
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_bottom_bar_rb_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="sc_FullScreenDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="scstyle" parent="Theme.AppCompat.Light">
        <!--开启时的颜色-->
        <item name="colorControlActivated">@color/black</item>
        <!--&lt;!&ndash;关闭时的颜色&ndash;&gt;-->
        <!--<item name="colorSwitchThumbNormal">#383434</item>-->
        <!--&lt;!&ndash;关闭时的轨迹颜色&ndash;&gt;-->
        <!--<item name="android:colorForeground">#ecd502</item>-->
    </style>

</resources>
